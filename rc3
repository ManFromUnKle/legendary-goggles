${offset 35}$uptime
${offset 20}${cpubar cpu6 0,87}
${offset 15}cpu ${alignr 25}${cpu cpu0}%
${offset 15}ram${alignr 25}${memperc}%
${offset 15}hdd${alignr 25}${fs_used_perc}%
${offset 20}${cpubar cpu6 0,87}
${offset 15}load${alignr 25}${loadavg 1}%
${offset 15}disk${alignr 25}${diskio}%
${offset 20}${cpubar cpu6 0,87}
${offset 15}upload${alignr 25}${upspeed wlan2}
${offset 15}download${alignr 25}${downspeed wlan2}
${offset 20}${cpubar cpu6 0,87}
${offset 30}${totalup wlan2} / ${totaldown wlan2}






